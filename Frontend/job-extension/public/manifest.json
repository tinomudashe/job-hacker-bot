{
  "manifest_version": 3,
  "name": "Job Hacker Bot",
  "version": "1.0.0",
  "description": "Extract job details and create tailored resumes and cover letters",
  "permissions": [
    "activeTab",
    "storage", 
    "tabs",
    "scripting",
    "contextMenus",
    "sidePanel",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "jobhackerbot-logo (1).png",
      "32": "jobhackerbot-logo (1).png",
      "48": "jobhackerbot-logo (1).png",
      "128": "jobhackerbot-logo (1).png"
    }
  },
  "icons": {
    "16": "jobhackerbot-logo (1).png",
    "32": "jobhackerbot-logo (1).png",
    "48": "jobhackerbot-logo (1).png",
    "128": "jobhackerbot-logo (1).png"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  }
}